@model IEnumerable<odev._1.Models.Students>

@{
    ViewBag.Title = "Ana Sayfa";
}

<h1><font color="red">Students</font></h1>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchoolNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolNo)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.Studentid }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Göster", "Details", new { id=item.Studentid }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Studentid }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
